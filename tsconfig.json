{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "pretty": true,
    // "skipLibCheck": true, @deprecated v3.7.x+
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "incremental": true,
    "strictNullChecks": true,
    "noLib": false,
    "lib": ["ESNext"],
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "baseUrl": ["."],
      "@/*": ["./src/*"]
    }
  },
  "linterOptions": {
    "exclud": ["src/**"]
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
